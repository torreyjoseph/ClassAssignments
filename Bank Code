//Main.java:

public class Main {

    public static void main(String[] args) {

        Client one = new Client("Luka≈°", "Miloslav", "Novak", 120291, 498932.9398);
        Client two = new Client("Kathy", "Blair", "Dietrich", 105891, 530300.3049);
    }
